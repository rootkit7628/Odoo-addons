<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Citadels category  -->
    <record id="module_citadel_category" model="ir.module.category">
        <field name="name">Citadels</field>
    </record>

    <!-- Citadels User Group -->
    <record id="citadel_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id"
            ref="module_citadel_category"/>
        <field name="implied_ids"
            eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Citadels Manager Group -->
    <record id="citadel_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
            ref="module_citadel_category"/>
        <field name="implied_ids"
            eval="[(4, ref('citadel_group_user'))]"/>
        <field name="users"
            eval="[(4, ref('base.user_root')),
            (4, ref('base.user_admin'))]"/>
    </record>

</odoo>
